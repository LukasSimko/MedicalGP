<div class="jumbotron text-center">
    <h1>Patient Registration</h1>

    <p>{{ message }}</p>

    <div ng-controller="patientController">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">


                <form ng-submit="rgstPatient(regData)">

                    <div class="col-md-4" ><span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>First Name</div>
                    <div class="col-md-8" ><input class="form-control" type="text" name="fname" placeholder="Please the patient first name" ng-model="regData.fname" required = "true"></div>
                    <br><br><br>

                    <div class="col-md-4" ><span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>Second Name</div>
                    <div class="col-md-8" ><input class="form-control"  type="text" name="sname"  placeholder="Please enter your second name" ng-model="regData.sname" required = "true"> </div>
                    <br><br><br>

                    <div class="col-md-4" ><span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>Address</div>
                    <div class="col-md-8" ><input class="form-control"  type="text" name="address"  placeholder="Please enter your address" ng-model="regData.address" required = "true"></div>
                    <br><br><br>

                    <div class="col-md-4" ><span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>Contact Number</div>
                    <div class="col-md-8" ><input class="form-control"  type="tel" name="contact"  placeholder="Please enter your contact number" ng-model="regData.contact" required = "true"></div>
                    <br><br><br>
                    <div class="col-md-2" ></div><div class="col-md-8" ><button class ="btn btn-primary" type = "submit">Register Patient </button></div>
                </form>
                <br> <br>  <br>

            </div>
        </div>
    </div>